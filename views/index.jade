extends layout
block content
	include navbar

	.container
		//intro
		div.prev(id=links[1].value)
			div.internal_wrapper
				h1=cont_intro["title"]
				h1.subtitle=cont_intro["subTitle"]
				img(src=images['lime_bottle_intro'])

		//about
		div.prev(id=links[3].value)
			div.internal_wrapper
				h2=cont_about["title_1"]
				
				//add paragraph to the desktop version
				- var des_p= cont_about["text_body"].split("\n")
				- for (var x = 0; x < des_p.length; x++){
					if des_p[x]!=="" && des_p[x]!== undefined
						p(class='about_desktop')= des_p[x]
				- }
				
				//add paragraph to the mobile version
				- var des_p_mobile= cont_about["mobile_version"].split("\n")
				- for (var x = 0; x < des_p_mobile.length; x++){
					if des_p_mobile[x]!=="" && des_p_mobile[x]!== undefined
						p(class='about_mobile')= des_p_mobile[x]
				- }


		//flavors
		div.prev(id=links[5].value)
			div.internal_wrapper
				.flavor.fruit_punch
					h1=cont_flavor["flavor_1_name"]
					.nutritionInfo
						.nut_button
							.nut_button_wrapper
								img.show_info(src=images['plus_btn'])
								p Nutrition
						.nut_hide_info.hide
							.nut_info
								img(src=images['fruit_punch_nut_label'])
							.flavor_info.hide
								p= cont_flavor["f_1_ingredients"]
				
				.flavor.lime
					h1=cont_flavor["flavor_2_name"]
					.nutritionInfo
						.nut_button
							.nut_button_wrapper
								img.show_info(src=images['plus_btn'])
								p Nutrition
						.nut_hide_info.hide
							.nut_info
								img(src=images['lime_nut_label'])
							.flavor_info.hide
								p= cont_flavor["f_2_ingredients"]

				.flavor.orange
					h1=cont_flavor["flavor_3_name"]
					.nutritionInfo
						.nut_button
							.nut_button_wrapper
								img.show_info(src=images['plus_btn'])
								p Nutrition
						.nut_hide_info.hide
							.nut_info
								img(src=images['orange_nut_label'])
							.flavor_info.hide
								p= cont_flavor["f_3_ingredients"]

		//who we are
		div.prev(id=links[7].value)
			div.internal_wrapper
				h3=cont_who_we["title"]
				
				//add the exact number of paragraphs
				- var description= cont_who_we["text_body"].split("\n")
				- for (var x = 0; x < description.length; x++){
					if description[x]!=="" && description[x]!== undefined
						p= description[x]
				- }
		
		//videos 
		//div.prev(id=links[9].value)
			div.internal_wrapper
				div.carousel_navegation
					.arrows
						.left
							img(src=images['left_arrow'])
						.right
							img(src=images['right_arrow'])
						.cleaner
					.dots
						ul
							li
								img.active(id="video_1" src=images['carousel_dot'])
							li
								img(id="video_2" src=images['carousel_dot'])
							li
								img(id="video_3" src=images['carousel_dot'])
				
				.video_container
					div.kvideo
						img(src=images["video_1"])
						div.video_play_btn
							img(src=images['play_btn'])
						div.video_content.hide
							video(controls)
								source(src='/assets/media/video_placeholder.mp4')
							.close_video
								img(src=images["video_close_btn"])
					div.kvideo
						img(src=images["video_1"])
						div.video_play_btn
							img(src=images['play_btn'])
						div.video_content.hide
							video(controls)
								source(src='/assets/media/video_placeholder_2.mp4')
							.close_video
								img(src=images["video_close_btn"])
					div.kvideo
						img(src=images["video_1"])
						div.video_play_btn
							img(src=images['play_btn'])
						div.video_content.hide
							video(controls)
								source(src='/assets/media/video_placeholder_3.mp4')
							.close_video
								img(src=images["video_close_btn"])
									
		//transitionalscreen		
		//#tran_screen.prev.transition

		//research
		div.prev(id=links[11].value)
			div.internal_wrapper
				h3=cont_research["title"]
				p=cont_research["label"]
				.research_container
					-var res_index = 1
					- for (var x = 3; x < cont_research.size; x+=3){ //start on 3 to ignore the title, label and the btn_more text.
						-var r_text= cont_research["res_text_"+res_index]
						-var temp_text
						-var temp_resume= ""
						-var temp_more= ""
						
						div(class= res_index < 3 ? "res_element" : "res_element extra hide_research")
							p.res_title=cont_research["res_title_"+res_index]
							//Split text if needed
							//if r_text.length > 350
								-temp_text = r_text.split(" ");
								-for (var i= 0 ; i < temp_text.length; i++){
									if i < temp_text.length/2
										-temp_resume += temp_text[i]+" "
									else
										-temp_more += temp_text[i]+" "
								- }
									p.res_resume.
										#{temp_resume}
										<span class="res_extraInfo">...</span>
										<span class="res_extraInfo hide_research">#{temp_more}</span>
									img.more_research.right(src=images['more_dot_btn'])
									.cleaner
							//else
							p.res_resume= r_text
							a.res_link(href=cont_research["res_link_"+res_index])
								img.more_research.right(src=images['more_dot_btn'])
							.cleaner

						-res_index++
						
					- }
					if res_index-1 >= 3
						.res_btn_more
							p=cont_research["btn_more"]+" more"

		//contact
		div.prev(id=links[15].value)
			div.internal_wrapper
				h3=cont_contact["title"]
				p="Email: "
					a(href="mailto:" + cont_contact["email_link"])=cont_contact["email_link"]

				p="Media and Press Inquiries: " 
					a(href="mailto:" + cont_contact["heather_email"])=cont_contact["heather_email"]

		//locations
		div.prev(id=links[13].value)
			div.internal_wrapper
				.loc_content
					h3=cont_location["title"]
					p=cont_location["label"]
					ul
						- for (var x = 1; x < cont_location.size-1; x++){
							if cont_location["place_"+x]!=" " && cont_location["place_"+x]!=""
								li=cont_location["place_"+x]
						- }
						.cleaner
				.footer
					//p=cont_footer["text"]
					//p=cont_footer["copyright"]
					p.copyRights Â© K+ 2016. All Rights Reserved. 
					a(href="mailto:help@kplusorganics.com") Help
					span  | 
					a(href="assets/documents/KPLUS_Privacy_Policy.pdf") Privacy
					span  | 
					a(href="assets/documents/KPLUS_TERMS_OF_USE.pdf") Terms
					span  | 
					a(href="mailto:pr@kplusorganics.com") Press Inquiries

	script(src='js/index.js')

